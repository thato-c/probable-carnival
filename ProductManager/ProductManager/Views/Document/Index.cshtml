@model ProductManager.ViewModels.DocumentUploadViewModel

<form  asp-controller="Document" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProjectId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <legend>Upload Document</legend>
        
        <div class="form-group">
            <label asp-for="DocumentName" class="control-label">Name</label>
            <input asp-for="DocumentName" type="text" class="form-control" />
            <span asp-validation-for="DocumentName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FileUpload.FormFile" class="control-label"></label>
            <input asp-for="FileUpload.FormFile" type="file" class="form-control" />
            <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>
        </div>
    </fieldset>
    

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<br />

@if (Model.Documents != null && Model.Documents.Any())
{
    <table class="table">
        <tr>
            <th>
                Document Name
            </th>
            <th>
                Size
            </th>
            <th>
                UploadDate
            </th>
            <th>
            </th>
        </tr>
        @foreach (var document in Model.Documents)
        {
            if (document != null)
            {
                <tr>
                    <td>
                        @document.Name
                    </td>
                    <td>
                        @document.FileSize
                    </td>
                    <td>
                        @document.UploadDate
                    </td>
                    <td>
                        <a asp-action="" asp-route-FileId="@document.FileId">Preview</a>
                    </td>
                </tr>
            }
        }
    </table>
}
else
{
    <p>No documents found for the current project</p>
}