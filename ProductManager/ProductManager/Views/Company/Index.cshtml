@model List<Company>
@{
}

<h2>Companies</h2>

<br />
<a asp-controller="Company" asp-action="Create">Register a new Company</a>
<br />
<br />

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Filter: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> | 
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Admin
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PaymentSortParm"]"> Payment Status</a>  
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
        @for (var i = 0; i < Model.Count; i++)
        {
            var company = Model[i];
            if (company != null)
            {
                <tr>
                    <td>
                        @company.CompanyName
                    </td>
                    <td>
                        @company.CompanyPhoneNumber
                    </td>
                    <td>
                        @company.CompanyEmail
                    </td>
                    <td>
                        @company.AdminEmail
                    </td>
                    <td>
                        @company.PaymentStatus
                    </td>
                    <td>
                        <a asp-controller="Company" asp-action="Edit" asp-route-CompanyId="@company.CompanyId">Edit</a>
                    </td>
                    <td>
                        Delete
                    </td>
                </tr>
            }
        }
    </table>
}
else
{
    <p>@ViewBag.Message</p>
}